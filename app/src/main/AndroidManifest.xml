<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.willy_will">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <meta-data
        android:name="com.kakao.sdk.AppKey"
        android:value="02bcc5ccac3144389ff97078106a8721" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activityBase"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- set addItem Activity -->
        <activity
            android:name=".activityItemAdd"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <!-- set searchItem Activity -->
        <activity
            android:name=".activityItemSearch"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".activityGroupSearchSetting"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/PopupTheme" />
        <activity android:name=".activityCompleteRepeatSearchSetting"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/PopupTheme" />
        <activity android:name=".activityPeriodSearchSetting"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/PopupTheme" />
        <activity android:name=".activityRadiusSearchSetting"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/PopupTheme" />
        <!-- set detail Activity -->
        <activity
            android:name=".activityDetail"
            android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>

</manifest>