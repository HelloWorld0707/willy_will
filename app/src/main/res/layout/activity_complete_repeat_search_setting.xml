<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PopupStyle"
    android:orientation="vertical">

    <TextView
        style="@style/PopupTitleStyle"
        android:text="@string/complete_repeat" />

    <ImageView style="@style/ThickBottomBarStyle" />

    <TextView
        android:id="@+id/all_cmplt"
        style="@style/TextRecyclerItemStyle"
        android:text="@string/all" />

    <ImageView style="@style/BottomBarStyle" />

    <TextView
        android:id="@+id/incomplete"
        style="@style/TextRecyclerItemStyle"
        android:text="@string/incomplete" />

    <ImageView style="@style/BottomBarStyle" />

    <TextView
        android:id="@+id/complete"
        style="@style/TextRecyclerItemStyle"
        android:text="@string/complete" />

    <ImageView style="@style/ThickBottomBarStyle" />

    <TextView
        android:id="@+id/including_repeat"
        style="@style/TextRecyclerItemStyle"
        android:text="@string/including_repeat" />

    <ImageView style="@style/ThickBottomBarStyle" />

    <LinearLayout style="@style/PopupBottomLayoutStyle">

        <ImageButton
            android:id="@+id/complete_repeat_search_setting_cancel"
            style="@style/PopupCancelStyle"
            android:onClick="cancelSetting" />

        <ImageView style="@style/PopupBottomVerticalBarStyle" />

        <ImageButton
            android:id="@+id/complete_repeat_search_setting_okay"
            style="@style/PopupOkayStyle" />

    </LinearLayout>

</LinearLayout>