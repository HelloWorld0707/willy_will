<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PopupStyle"
    android:orientation="vertical">

    <TextView
        style="@style/PopupTitleStyle"
        android:text="@string/done_repeat" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/done_search_setting_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/including_repeat_text_view"
            style="@style/TextRecyclerItemStyle"
            android:layout_width="@dimen/match_constraint"
            android:text="@string/including_repeat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/repeat_check_box" />

        <CheckBox
            android:id="@+id/repeat_check_box"
            style="@style/CheckBoxStyle"
            android:checked="true"
            android:layout_marginTop="@dimen/popup_title_margin_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/including_repeat_text_view"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/layout_popup_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basic_margin" />

</LinearLayout>