<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/detailView">

        <ImageButton
            android:id="@+id/back_button"
            style="@style/IconButtonStyle"
            android:layout_marginRight="@dimen/basic_margin"
            android:foreground="?attr/homeAsUpIndicator"
            android:onClick="backToMain"/>

        <ImageButton
            style="@style/IconButtonStyle"
            android:layout_marginRight="@dimen/basic_margin"
            android:foreground="?attr/homeAsUpIndicator"
            android:onClick="backToMain" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/detailView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="138dp">


            <LinearLayout
                android:id="@+id/itemArea"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/importance"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:foregroundGravity="center"
                    android:visibility="visible"
                    app:srcCompat="@drawable/gravity1" />

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:foregroundGravity="right"
                    android:gravity="center_vertical"
                    android:text="프로그래머스_정렬 문제 풀기"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#DBDBDB" />

            <RelativeLayout
                android:id="@+id/groupArea"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="0"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="그룹"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/groupColor"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@id/groupName"
                    android:layout_alignParentLeft="false"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/colorsample" />

                <TextView
                    android:id="@+id/groupName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="20dp"
                    android:text="취업준비"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="0"
                    android:background="#DBDBDB" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/dateArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="날짜" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#DBDBDB" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="시작 날짜"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="0dp"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:paddingRight="20dp"
                        android:text="2020-01-31"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#DBDBDB" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="종료 날짜"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="0dp"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:paddingRight="20dp"
                        android:text="2020-01-31"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/doneDateArea"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#DBDBDB" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="완료 날짜"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/doneDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="0dp"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:paddingRight="20dp"
                        android:text="2020-01-31"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    tools:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#DBDBDB" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="반복"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/roof"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="0dp"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:paddingRight="20dp"
                        android:text="월 화 수 목 금 토"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="0"
                    android:background="#DBDBDB" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/achievementRateArea"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-16dp"
                tools:layout_editor_absoluteY="529dp"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="주간 달성율"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/achievementRate"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:paddingRight="20dp"
                    android:text="80%"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/sun"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="일"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="월"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tue"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/achievement_false"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="화"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/web"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="수"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/thu"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="목"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/fri"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/achievement_true"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="금"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/sat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="토"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="0"
                    android:background="#DBDBDB" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/locationArea"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="667dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="위치"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="서울 강남구 강남대로 지하 396"
                    android:textSize="16sp" />

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical" android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <RelativeLayout
                        android:id="@+id/map_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
