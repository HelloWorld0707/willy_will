<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- [2020-02-10] Modified by Shin Minyong -->

    <!-- Bottom Bar Style -->
    <style name="BottomBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_bar_height</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>
    <style name="ThickBottomBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/thick_bottom_bar_height</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>
    <!-- ~Bottom Bar Style -->

    <!-- Pop-up Theme & Style -->
    <style name="PopupTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/shape_white_rounded_rectangle</item>
    </style>
    <style name="PopupStyle">
        <item name="android:layout_width">@dimen/popup_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="PopupTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:layout_marginVertical">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">@dimen/popup_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PopupBottomLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="PopupOkayCancelButtonsStyle">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="PopupCancelStyle" parent="@style/PopupOkayCancelButtonsStyle">
        <item name="android:background">@drawable/ripple_cancel_button</item>
        <item name="android:src">@drawable/ic_rounded_close_24px</item>
    </style>
    <style name="PopupOkayStyle" parent="@style/PopupOkayCancelButtonsStyle">
        <item name="android:background">@drawable/ripple_okay_button</item>
        <item name="android:src">@drawable/ic_rounded_check_24px</item>
    </style>
    <style name="PopupBottomVerticalBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:src">@android:drawable/status_bar_item_app_background</item>
    </style>
    <!-- ~Pop-up Theme & Style -->

    <!-- Icon Button Style -->
    <style name="IconButtonStyle">
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>
    <!-- ~Icon Button Style -->

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>
    <!-- ~Button Style -->

    <!-- Text List Item Style -->
    <style name="TextListItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_list_item_height</item>
        <item name="android:paddingHorizontal">@dimen/basic_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_list_item_text_size</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:background">@drawable/recycleritem</item>
    </style>

    <!-- ~[2020-02-10] Modified by Shin Minyong -->


    <!-- [2020-02-17] Modified by Kim Mikyung -->
    <style name="DetailButtonStyle">
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_margin">@dimen/detail_icon_margin</item>
    </style>

    <style name="DetailListStyle">
        <item name="android:paddingRight">@dimen/detail_list_padding</item>
        <item name="android:paddingLeft">@dimen/detail_list_padding</item>
    </style>

    <style name="DetailTitleStyle">
        <item name="android:textSize">@dimen/detail_title_style</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DetailDayStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- ~[2020-02-17] Modified by Kim Mikyung -->

</resources>
