<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="editTextColor">@color/colorString</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="editTextColor">@color/colorString</item>
    </style>

    <!-- Pop-up Theme & Style -->
    <style name="PopupTheme" parent="DialogTheme">
        <item name="android:windowBackground">@drawable/shape_white_rounded_rectangle</item>
    </style>
    <style name="PopupStyle">
        <item name="android:layout_width">@dimen/popup_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="PopupTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:layout_marginVertical">@dimen/popup_title_margin_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorString</item>
        <item name="android:textSize">@dimen/popup_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PopupContentsTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorString</item>
    </style>
    <!-- ~Pop-up Theme & Style -->

    <!-- Back Button Style -->
    <style name="BackButtonStyle" parent="ActionBtnStyle">
        <item name="android:foreground">?attr/homeAsUpIndicator</item>
    </style>
    <!-- ~Back Button Style -->

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:background">@drawable/rounded_rectangle_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- ~Button Style -->

    <!-- CheckBox Style -->
    <style name="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/checkbox_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/checkbox_margin_end</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>
    <!-- ~CheckBox Style -->

    <!-- Text Recycler Item Style -->
    <style name="TextRecyclerItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_recycler_item_height</item>
        <item name="android:paddingHorizontal">@dimen/basic_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_recycler_item_text_size</item>
        <item name="android:textColor">@color/colorString</item>
        <item name="android:background">@drawable/recycleritem</item>
    </style>
    <!-- ~Text Recycler Item Style -->

    <!-- [2020-02-17] Modified by Kim Mikyung -->
    <style name="ActionBtnStyle">
        <item name="android:layout_width">@dimen/actionbar_button_size</item>
        <item name="android:layout_height">@dimen/actionbar_button_size</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_margin">@dimen/detail_icon_margin</item>
    </style>

    <style name="DetailListStyle">
        <item name="android:paddingRight">@dimen/detail_list_padding</item>
        <item name="android:paddingLeft">@dimen/detail_list_padding</item>
    </style>

    <style name="DetailTitleStyle">
        <item name="android:textSize">@dimen/detail_title_style</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DetailDayStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- ~[2020-02-17] Modified by Kim Mikyung -->

    <!-- Base application theme. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ActionBtnStyle by seongsik -->
    <style name="ActionBtnStyle2">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

</resources>